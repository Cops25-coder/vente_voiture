<Window x:Class="CarGestion.VoitureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voiture" Height="250" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Marque"/>
        <TextBox Grid.Row="1" x:Name="MarqueTextBox" Margin="0,0,0,10"/>
        <Label Grid.Row="2" Content="Modèle"/>
        <TextBox Grid.Row="3" x:Name="ModeleTextBox" Margin="0,0,0,10"/>
        <Label Grid.Row="4" Content="Année"/>
        <TextBox Grid.Row="5" x:Name="AnneeTextBox" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Enregistrer" Width="80" Margin="5" Click="Enregistrer_Click"/>
            <Button Content="Annuler" Width="80" Margin="5" Click="Annuler_Click"/>
        </StackPanel>
    </Grid>
</Window>